@model Swimduler.Models.Group

@{
    ViewBag.Title = "Usuwanie grupy";
}

<h2>Usuwanie grupy</h2>

<h3>Jesteś pewien, że chcesz usunąć wybrany wpis?</h3>
<div>
    <h5 class="text-warning">Usunięcie grupy spowoduje skasowanie powiązanych z nią lekcji wraz z wydarzeniami.</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lessons)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lessons.Count)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Wróć do listy", "Index")
        </div>
    }
</div>
